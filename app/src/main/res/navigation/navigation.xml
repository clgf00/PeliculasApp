<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/listadoFragment">

    <fragment
        android:id="@+id/listadoFragment"
        android:name="com.example.claudiagalerapract2.ui.listado.ListadoFragment"
        android:label="Listado de PelÃ­culas"
        tools:layout="@layout/fragment_listado">

        <action
            android:id="@+id/action_listadoFragment_to_detalleFragment"
            app:destination="@id/detalleFragment">
            <argument
                android:name="heroId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detalleFragment"
        android:name="com.example.claudiagalerapract2.ui.listado.DetalleFragment"
        android:label="Detalle de Heroe"
        tools:layout="@layout/fragment_detalle">
        <argument
            android:name="heroId"
            app:argType="string" />
        <argument
            android:name="nuevo"
            app:argType="boolean" />
    </fragment>
</navigation>
